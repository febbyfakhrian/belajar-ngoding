{
    "name": "InspectionFlow",
    "nodes": [
        {
            "id": "start",
            "type": "action",
            "parameters": { "actionKey": "Plc.LampOn" }
        },
        {
            "id": "prepare-cam",
            "type": "action",
            "parameters": { "actionKey": "Camera.Prepare" }
        },
        {
            "id": "capture",
            "type": "action",
            "parameters": { "actionKey": "Camera.CaptureFrame" }
        },
        {
            "id": "inspect",
            "type": "action",
            "parameters": { "actionKey": "Ai.Inspect" }
        },
        {
            "id": "check",
            "type": "condition",
            "parameters": {
                "conditions": {
                    "Dimension": "Ai.Result.Dimension",
                    "Surface": "Ai.Result.Surface"
                }
            }
        },
        {
            "id": "pass",
            "type": "action",
            "parameters": { "actionKey": "Plc.SendPass" }
        },
        {
            "id": "fail",
            "type": "action",
            "parameters": { "actionKey": "Plc.SendFail" }
        }
    ],
    "connections": [
        {
            "from": "start",
            "to": "prepare-cam"
        },
        {
            "from": "prepare-cam",
            "to": "capture"
        },
        {
            "from": "capture",
            "to": "inspect"
        },
        {
            "from": "inspect",
            "to": "check"
        },
        {
            "from": "check",
            "to": "pass",
            "when": "Dimension == true && Surface == true"
        },
        {
            "from": "check",
            "to": "fail",
            "when": "Dimension == false || Surface == false"
        }
    ]
}